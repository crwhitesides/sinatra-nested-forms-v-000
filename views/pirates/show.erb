<h1>Display your Pirate here</h1>
  <div class="pirate">
    <h3>Name: <%= @pirate.name %></h3>
    <h4>Weight: <%= @pirate.weight %></h4>
    <h4>Height: <%= @pirate.height %></h4>
  </div>

<h2>Display your first ship here</h2>
  <div class="ship">
    <p>Name: <%= @ships.first.name %></p>
    <p>Type: <%= @ships.first.type %></p>
    <p>Booty: <%= @ships.first.booty %></p>
  </div>

<h2>Display your second ship here</h2>
  <div class="ship">
    <p>Name: <%= @ships.last.name %></p>
    <p>Type: <%= @ships.last.type %></p>
    <p>Booty: <%= @ships.last.booty %></p>
  </div>